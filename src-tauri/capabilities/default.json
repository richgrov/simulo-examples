{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "http:allow-fetch",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://192.168.12.1:9991/con_notify" },
        { "url": "http://192.168.12.1:9991/*" },
        { "url": "http://192.168.12.1:*" }
      ]
    }
  ]
}
